{
  "extends": [
    "config:recommended",
    "default:pinDigestsDisabled",
    "mergeConfidence:all-badges",
    "docker:disable"
  ],
  "assignees": [
    "I539149",
    "d063094"
  ],
  "commitMessageAction": "Renovate: Update",
  "constraints": {
    "node": ">= 18"
  },
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "osvVulnerabilityAlerts": true,
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "prHourlyLimit": 0,
  "schedule": [
    "before 8am on Friday"
  ],
  "packageRules": [
    {
      "description": "Updates for React and related packages separately",
      "schedule": ["before 8am on Friday"],
      "matchPackageNames": ["/^react$/", "/^react-.*/"]
    },
    {
      "description": "Updates for all @cloudoperators packages separately",
      "schedule": ["before 8am on Friday"],
      "matchPackageNames": ["/^@cloudoperators/.*/"]
    },
    {
      "description": "Group all other dependencies",
      "groupName": "all-dependencies-except-react-and-cloudoperators",
      "schedule": ["before 8am on Friday"],
      "matchPackageNames": ["/.*/"]
    }
  ],
  "semanticCommits": "disabled"
}
