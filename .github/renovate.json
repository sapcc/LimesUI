{
  "extends": [
    "config:recommended",
    "default:pinDigestsDisabled",
    "mergeConfidence:all-badges",
    "docker:disable"
  ],
  "assignees": [
    "I539149",
    "d063094"
  ],
  "commitMessageAction": "Renovate: Update",
  "constraints": {
    "node": ">= 18"
  },
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "osvVulnerabilityAlerts": true,
  "postUpdateOptions": [
    "npmDedupe"
  ],
  "prHourlyLimit": 0,
  "schedule": [
    "before 8am on Friday"
  ],
  "packageRules": [
    {
      "description": "Updates for React and related packages separately",
      "schedule": [
        "before 8am on Friday"
      ],
      "groupName": "react updates",
      "matchPackageNames": [
        "/^react$/",
        "/^react-.*/"
      ]
    },
    {
      "description": "Updates for all @cloudoperators packages separately",
      "schedule": [
        "before 8am on Friday"
      ],
      "groupName": "cloudoperators updates",
      "matchPackageNames": [
        "/^@cloudoperators/.*/"
      ]
    },
    {
      "description": "Updates for Tailwind and related packages separately",
      "matchPackageNames": [
        "/^tailwindcss$/",
        "/^tailwindcss-.*/"
      ],
      "groupName": "tailwind updates",
      "schedule": [
        "before 8am on Friday"
      ]
    },
    {
      "description": "Group all other dependencies",
      "schedule": [
        "before 8am on Friday"
      ],
      "matchPackageNames": [
        "/.*/"
      ]
    }
  ],
  "semanticCommits": "disabled"
}
